.tx{
  width:100%;
  height:300rpx;
  background: url("http://127.0.0.1:3002/img/tx.jpg") no-repeat;
  display: flex;
  justify-content: space-around;  
}
.tx .txx{ 
  margin-top:100rpx;
  margin-left:100rpx;
  width:80rpx;
  height: 80rpx;

}
.tx .txx image{
  width:80rpx;
  height: 80rpx;
  border: 1px solid #fff;
  border-radius:50%; 

}
.tx .img1{
  width:30rpx;
  height: 30rpx;
}
.name{
  margin-top:100rpx;
  margin-right:300rpx;
}
.name text{
  color:#fff;
  font-size:30rpx;
  margin-right:20rpx;
}
.body-title{
  width:100%;
  height: 35rpx;
  color:#000;
  font-size: 27rpx;
  border-bottom:1px solid #ddd;
  padding:10rpx 10rpx;
  display: flex;
  justify-content: space-between;
}
.body-title image{
  width: 35rpx;
  height: 35rpx;
  vertical-align: middle;
}
.right text{
  color:#aaa;
}
.step{
  width: 100%;
  height:76rpx;
  display: flex;
  justify-content: space-around;
  font-size: 27rpx;
  padding:25rpx 0;
}
.step view{
  text-align:center;
}
.step view image{
  width:35rpx;
  height: 35rpx;
}
.divide{
  width: 100%;
  height: 12rpx;
  background: #f6f6f6;
}
.content .content-item{
  height: 30rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  font-size:27rpx;
  border-bottom:1px solid #ddd;
  padding:16rpx 10rpx;
  padding-right:10rpx;
  font-family: "simhei";
  color:#000;
}
.content image{
  height: 41rpx;
  width: 41rpx;
  vertical-align: middle;
}
.left image{
  margin-right: 15rpx;
}
.iright{
  margin-right:15rpx;
}